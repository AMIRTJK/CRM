{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./server", // Указываем корневую папку исходных файлов
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "server/**/*.ts" // Убедись, что пути корректны для всех файлов .ts
  ],
  "exclude": ["node_modules"]
}
